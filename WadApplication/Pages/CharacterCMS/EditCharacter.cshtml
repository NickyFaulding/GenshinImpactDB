@page
@model WadApplication.Pages.CharacterCMS.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit Character</h1>

<div class="formBoundry">
    <form method="post">
        <input type="hidden" asp-for="Character.CharacterID" />
        <label asp-for="Character.Name" class="control-label"></label>
        <div class="form-group">
            <input asp-for="Character.Name" class="form-control" />
        </div>
        <label asp-for="Character.Vision" class="control-label"></label>
        <div class="form-group">
            <select asp-for="Character.Vision">
                <option value="Anemo">Anemo</option>
                <option value="Electro">Electro</option>
                <option value="Hydro">Hydro</option>
                <option value="Cryo">Cryo</option>
                <option value="Pyro">Pyro</option>
                <option value="Dendro">Dendro</option>
                <option value="Adaptive">Adaptive</option>
            </select>
        </div>
        <label asp-for="Character.WeaponType" class="control-label"></label>
        <div class="form-group">
            <select asp-for="Character.WeaponType">
                <option value="Bow">Bow</option>
                <option value="Catalyst">Catalyst</option>
                <option value="Claymore">Claymore</option>
                <option value="Sword">Sword</option>
            </select>
        </div>
        <label asp-for="Character.Nation" class="control-label"></label>
        <div class="form-group">
            <select asp-for="Character.Nation">
                <option value="Mondstadt">Mondstadt</option>
                <option value="Liyue">Liyue</option>
                <option value="Snezhnaya">Snezhnaya</option>
                <option value="Unknown">Unknown</option>
            </select>
        </div>
        <label asp-for="Character.Rarity" class="control-label"></label>
        <div class="form-group">
            <select asp-for="Character.Rarity">
                <option value="4">⭐⭐⭐⭐</option>
                <option value="5">⭐⭐⭐⭐⭐</option>
            </select>
        </div>
        <label asp-for="Character.Description" class="control-label"></label>
        <div class="form-group">
            <textarea asp-for="Character.Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="submit" value="Save" />
            <a class="aBtns" asp-page="./Index">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
