@page
@model WadApplication.Pages.AllWeaponsModel
@{
}
<h1>All Avaliable Weapons</h1>

<form id="SearchBar">
    <p>
        Name : <input type="text" name="search" asp-for="SearchString" />
               <a href="javascript:void(0)" id="Search" >Search</a>
    </p>
</form>

<section class="wrap">
    @foreach (var item in Model.FoundWeapons)
    {
        <div class="filmThumb">
            <div>
                <a asp-page="WeaponDetailPage" asp-route-id="@item.WeaponID">
                    <img src=@(string.Format(@"\images\WeaponImages\{0}.webp", item.Name.Replace(" ", "%20"))) alt="@item.Name">
                </a>
            </div>
            <h3>
                @item.Name
            </h3>
        </div>
    }  
</section>