@page "{Id:int}"
@model WadApplication.Pages.WeaponDetailPage
@{
    string rating = "";
    for (int x = 0; x < Model.weaponById.Rarity; x++) { rating += "⭐"; }
}
<div class="itemDetail">
    <div class="description-grid">

        <h1>@Model.weaponById.Name</h1>

        <div class="grid-item">
            <img src=@(string.Format(@"\images\WeaponImages\{0}.webp",Model.weaponById.Name.Replace(" ", "%20")))>
        </div>
        <div class="grid-item">
            <h2>Rarity</h2>
            <p>@rating</p>
        </div>
        <div class="grid-item">
            <h2>Base Attack</h2>
            <p>Attack: @Model.weaponById.Attack</p>
        </div>
        <div class="grid-item">
            <h2>Substat</h2>
            <p>@Model.weaponById.SubStat @Model.weaponById.SubStatValue</p>
        </div>
        <div class="grid-item">
            <h2>Passive</h2>
            <p>@Model.weaponById.Passive</p>
        </div>
        <div class="grid-item">
            <h2>Description</h2>
            <p>@Model.weaponById.Description</p>
        </div>
    </div>
</div>
<button class="backBtn">Back</button>