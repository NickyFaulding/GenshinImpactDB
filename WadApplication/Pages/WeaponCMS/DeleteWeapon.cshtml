@page
@model WadApplication.Pages.WeaponCMS.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="formBoundry">
    <form method="post">
        <input type="hidden" asp-for="Weapon.WeaponID" />
        <label asp-for="Weapon.Name" class="control-label"></label>
        <div class="form-group">
            <input asp-for="Weapon.Name" class="form-control" disabled />
        </div>
        <label asp-for="Weapon.Type" class="control-label"></label>
        <div class="form-group">
            <select asp-for="Weapon.Type" disabled>
                <option value="Bow">Bow</option>
                <option value="Catalyst">Catalyst</option>
                <option value="Claymore">Claymore</option>
                <option value="Sword">Sword</option>
            </select>
        </div>
        <label asp-for="Weapon.Rarity" class="control-label"></label>
        <div class="form-group">
            <select asp-for="Weapon.Rarity" disabled>
                <option value="2">⭐⭐</option>
                <option value="3">⭐⭐⭐</option>
                <option value="4">⭐⭐⭐⭐</option>
                <option value="5">⭐⭐⭐⭐⭐</option>
            </select>
        </div>
        <label asp-for="Weapon.Attack" class="control-label"></label>
        <div class="form-group">
            <input asp-for="Weapon.Attack" class="form-control" disabled />
        </div>
        <label asp-for="Weapon.SubStat" class="control-label"></label>
        <div class="form-group">
            <select asp-for="Weapon.SubStat" disabled>
                <option value="ATK%">ATK%</option>
                <option value="CRIT DMG%">CRIT DMG%</option>
                <option value="CRIT Rate%">CRIT Rate%</option>
                <option value="DEF%">DEF%</option>
                <option value="Elemental Mastery">Elemental Mastery</option>
                <option value="Elemental Mastery">Elemental Mastery</option>
                <option value="HP%">HP%</option>
                <option value="Phys DMG%">Phys DMG%</option>
                <option value="none">none</option>
            </select>
        </div>
        <label asp-for="Weapon.SubStatValue" class="control-label" ></label>
        <div class="form-group">
            <input asp-for="Weapon.SubStatValue" class="form-control" disabled/>
        </div>
        <label asp-for="Weapon.Passive" class="control-label"></label>
        <div class="form-group">
            <textarea asp-for="Weapon.Passive" class="form-control" disabled></textarea>
        </div>
        <label asp-for="Weapon.Description" class="control-label"></label>
        <div class="form-group">
            <textarea asp-for="Weapon.Description" class="form-control" disabled></textarea>
        </div>
    </form>
    
    <form method="post">
        <input type="hidden" asp-for="Weapon.WeaponID" />
        <input type="submit" value="Delete"/> 
        <a class="aBtns" asp-page="./WeaponsCMS">Back to full List</a>
    </form>
</div>
