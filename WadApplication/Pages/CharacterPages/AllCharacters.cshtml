<h1>All Playable Characters</h1>

<form asp-page="./AllCharacters" method="get">
    <div class="">
        <p>
            <input type="submit" asp-route-searchStringRarity="@Model.CurrentRarityFilter" name="searchStringRarity" value="⭐⭐⭐⭐" />
            <input type="submit" asp-route-searchStringRarity="@Model.CurrentRarityFilter"name="searchStringRarity" value="⭐⭐⭐⭐⭐" />
        </p>
    </div>
</form>

<form asp-page="./AllCharacters" method="get">
    <div class="">
        <p>
            <input type="submit" asp-route-searchStringElement="@Model.CurrentElementFilter" name="searchStringElement" value="Anemo" />
            <input type="submit" asp-route-searchStringElement="@Model.CurrentElementFilter" name="searchStringElement" value="Pyro" />
            <input type="submit" asp-route-searchStringElement="@Model.CurrentElementFilter" name="searchStringElement" value="Cryo" />
            <input type="submit" asp-route-searchStringElement="@Model.CurrentElementFilter" name="searchStringElement" value="Hydro" />
            <input type="submit" asp-route-searchStringElement="@Model.CurrentElementFilter" name="searchStringElement" value="Electro" />
            <input type="submit" asp-route-searchStringElement="@Model.CurrentElementFilter" name="searchStringElement" value="Dendro" />
            <input type="submit" asp-route-searchStringElement="@Model.CurrentElementFilter" name="searchStringElement" value="Adaptive" />
        </p>
    </div>
</form>

<section class="wrap">
    @foreach (var item in Model.Characters)
    {
        <div class="filmThumb">
            <div>
                <a asp-page="CharacterDetailPage" asp-route-id="@item.CharacterID">
                    <img src=@(string.Format(@"\images\CharacterImages\CharacterIcons\{0}.png",item.Name.Replace(" ", "%20"))) alt="@item.Name">
                </a>
            </div>
            <h3>
                @item.Name
                <br />
                @if (item.Vision == "Adaptive")
                {
                    <img src="~/images/ElementIcons/Adaptive2.gif" alt="Adaptive" height="48" width="48" />
                }
                else
                {
                    <img src=@(string.Format(@"/images/ElementIcons/{0}2.png",item.Vision)) alt="@item.Vision" height="48" width="48" />
                }
            </h3>
        </div>
    }
</section>

