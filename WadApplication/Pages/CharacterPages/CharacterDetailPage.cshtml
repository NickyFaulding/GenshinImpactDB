@page "{Id:int}"
@model WadApplication.Pages.CharacterDetailPage
@{
    string rating = "";
    for (int x = 0; x < Model.characterById.Rarity; x++) { rating += "⭐"; }

    string nation = "";
    string characterName = Model.characterById.Name;
    string weaponType = Model.characterById.WeaponType;
    string vision = Model.characterById.Vision;
    string description = Model.characterById.Description;

    nation = Model.characterById.Nation;
    if(nation == "Unknown")
    {
        nation = "Mondstadt";
    }

}
    <div class="characterDetail-Style">
            <div>
                <div class="grid-item" id="characterName">
                    <img src=@(string.Format(@"/images/CharacterNames/{0}/{1}-W.png", nation, characterName)) alt="@characterName" width="300">
                </div>
                <div class="grid-item">
                    <img src=@(string.Format(@"/images/CharacterImages/{0}.png", characterName)) height="700">
                </div>
            </div>
            <div id="charDetails">
                <div class="grid-item">
                    <h2>Rating</h2>
                    <p>@rating</p>
                </div>
                <div class="grid-item">
                    <h2>Nation</h2>
                    <p>@Model.characterById.Nation</p>
                </div>
                <div class="grid-item">
                    <h2>Weapon</h2>
                    <p>@Model.characterById.WeaponType</p>
                    <img src=@(string.Format(@"/images/CharacterImages/WeaponType/{0}.png", weaponType)) alt="@weaponType" height="48" width="48" />
                </div>
                <div class="grid-item">
                    <h2>Vision</h2>
                    <p>@Model.characterById.Vision</p>
                    <img src=@(string.Format(@"/images/ElementIcons/{0}.png",vision)) alt="@vision" height="48" width="48" />
                </div>
                <div class="grid-item">
                    <h2>Description</h2>
                    <p>@description</p>
                </div>

                <div class="grid-item">
                    <form method="post">
                        <input type="hidden" value="@Model.characterById.CharacterID" id="ID" name="ID" />
                        <input type="hidden" value="@Model.characterById.Name" id="Name" name="Name" />
                        <input type="hidden" value="Character" id="ItemType" name="ItemType" />
                        <input type="hidden" value="@Model.characterById.Rarity" id="Rarity" name="Rarity" />
                    </form>
                    <input type="submit" value="Add To Favourites!" class="cta" />
                </div>
            </div>
    </div>
    
    <button class="backBtn">back</button>