@page

@model WadApplication.Pages.ArtifactSetPageModel
@{
    ViewData["Title"] = ViewData["ArtifactSet"];
}

<h1 class="Center-Text">@ViewData["ArtifactSet"]</h1>
<section class="wrap">


    @foreach (var item in Model.artifacts)
    {
        <div class="filmThumb">
            <div>
                <a asp-page="ArtifactDetailPage" asp-route-id="@item.ArtifactID">
                    <img src=@(string.Format(@"\images\ArtifactsImages\{0}.webp",item.Image.Replace(" ", "%20"))) alt="@item.Image">
                </a>
            </div>
            <h3>
                @item.Image
            </h3>
        </div>
    }
</section>

<button class="backBtn">Back</button>